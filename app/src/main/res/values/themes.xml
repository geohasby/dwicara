<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dwicara" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextContent">
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.Header">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textColorHint">@color/grey_500</item>
    </style>

    <style name="Button">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Button.Big">
        <item name="android:padding">@dimen/space_normal</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="strokeColor">@color/blue_500</item>
    </style>

    <style name="OutlinedButton.Big">
        <item name="android:padding">@dimen/space_normal</item>
    </style>

    <style name="OutlinedButton.Inline">
        <item name="android:padding">0dp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>